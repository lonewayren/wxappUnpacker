.orange {
    color: #ff5a05;
}

.order {
    padding-bottom: 60.8px;
    min-height: 100vh;
    background: #f5f5f5;
    box-sizing: border-box;
    font-size: 16px;
    color: #333;
}

.order .info {
    background: #FFF;
    margin-bottom: 6px;
}

.order .info .info-coupon {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-left: 11px;
    padding: 12px 11px 12px 0;
    border-bottom: #f5f5f5 solid 1px;
}

.order .info .info-price {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    margin-left: 11px;
    padding: 12px 11px 12px 0;
}

.order .coupon-tip {
    font-size: 14px;
    color: #353535;
    text-align: center;
    margin-top: 15px;
}

.order-list {
    display: flex;
    flex-direction: column;
    background: #FFF;
    margin-bottom: 6px;
}

.order-list-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 15px 11px;
    border-bottom: #e8e8e8 solid 1px;
}

.order-list-item image {
    width: 82px;
    height: 82px;
    flex-shrink: 0;
}

.order-list-item .dl {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    flex-grow: 1;
    padding-left: 8px;
}

.order-list-item .dl .dd {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.order-list-item .dl .dd .price {
    color: #ff5a05;
}

.popup {
    position: fixed;
    top: 100vh;
    opacity: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.6);
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 0.4s;
}

.popup.is-show {
    top: 0;
    opacity: 1;
}

.popup-box {
    width: 75.73vw;
    background: #fff;
    border-radius: 6px;
}

.ssale-hd {
    width: 100%;
    height: 76px;
    line-height: 76px;
    font-size: 18px;
    font-weight: 700;
    text-align: center;
    border-bottom: 1px solid #d2d2d2;
}

.ssale-bd {
    width: 100%;
    box-sizing: border-box;
    padding: 0 6vw 30px 6vw;
    text-align: center;
    font-size: 19px;
}

.ssale-icon {
    margin-top: 34px;
    color: #ff5a05;
}

.ssale-icon .iconfont {
    font-size: 36px;
    line-height: 1;
}

.ssale-price {
    color: #fa8919;
    font-size: 19px;
    margin-top: 15px;
    line-height: 1;
}

.ssale-pricetip {
    color: #fa8919;
    font-size: 13px;
    line-height: 1.8;
    margin-top: 18px;
}

.ssale-tip {
    color: #888;
    font-size: 10px;
    margin-top: 14px;
    line-height: 1.3;
}

.ssale-btn {
    font-size: 16px;
    width: 58.4vw;
    height: 10.67vw;
    line-height: 10.67vw;
    border-radius: 2px;
    margin: 0 auto;
}

.ssale-btn.is-strong {
    margin-top: 32px;
    background-color: #ff5a05;
    color: #fff;
}

.ssale-btn.is-weak {
    border: 1px solid #d9d9d9;
    color: #353535;
    margin-top: 12.5px;
}

.ssale-bd2 {
    width: 100%;
    box-sizing: border-box;
    padding: 30px 7.2vw;
    text-align: center;
}

.ssale-postertip {
    font-size: 4.3vw;
    color: #353535;
}

.ssale-postertip-line {
    width: 100%;
    border-top: 1px solid #d9d9d9;
    margin: 20px 0;
}

.button-requesting {
    opacity: 0.7;
}

.cellphone {
    font-size: 28rpx;
    text-align: center;
    position: absolute;
    line-height: 1;
    bottom: 81px;
    width: 100%;
    color: #888;
}

.cellphone .change {
    color: #5399E0;
    margin-left: 26rpx;
}