page {
    background-color: #f5f5f5;
}

.comment-box {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    padding-bottom: 11px;
    padding-left: 17.5px;
    padding-right: 17.5px;
    background-color: #FFF;
}

.comment-box-input {
    color: #353535;
    width: 100%;
    height: 150px;
    font-size: 30rpx;
    placeholder-color: #888;
    line-height: 19px;
    padding-top: 15px;
    font-size: 16px;
}

.comment-box-counter {
    text-align: right;
    color: #888;
    font-size: 11px;
}

.warning {
    color: #ff5a05;
}

.btn-summit {
    margin-top: 41px;
    margin-left: 22.5px;
    margin-right: 22.5px;
    color: #FFF;
    height: 39px;
    line-height: 40px;
    font-size: 30rpx;
    background-color: #ff5a05;
    text-align: center;
    overflow: hidden;
    border-radius: 2.5px;
}