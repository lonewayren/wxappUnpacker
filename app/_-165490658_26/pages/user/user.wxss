.wraper {
    background-color: #f5f5f5;
    min-height: 100vh;
    box-sizing: border-box;
    padding-bottom: 40rpx;
}

.user {
    background-color: #fff;
    padding: 22px 0 52rpx 0;
    text-align: center;
}

.user-avatar {
    width: 170rpx;
    height: 170rpx;
    border-radius: 85rpx;
    overflow: hidden;
    background-color: #FFF;
}

.user-nologin {
    font-size: 32rpx;
    margin-top: 42rpx;
    line-height: 1;
    color: #353535;
    display: flex;
    justify-content: center;
    align-items: center;
    letter-spacing: 2rpx;
}

.user-nologin .icon {
    font-size: 20rpx;
    color: #c7c7cc;
    margin-left: 10rpx;
    position: relative;
}

.user-login {
    margin-top: 35rpx;
    line-height: 1;
    font-size: 40rpx;
}

.user-login .phone {
    margin-top: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #888;
}

.user-login .num {
    margin: 0 26rpx;
}

.user-login .change {
    font-size: 28rpx;
    color: #5399E0;
}

.user-btn-bind {
    margin-top: 28rpx;
    font-size: 28rpx;
    color: #F76260;
    line-height: 1;
    text-align: center;
    letter-spacing: 2rpx;
}

.user-btn-bind .icon {
    font-size: 13px;
}

.zm-cells {
    background-color: #f5f5f5;
    padding-top: 20px;
}

.zm-cell {
    background-color: #fff;
    height: 50px;
}

.zm-cell-hover {
    background-color: #e5e5e5;
}

.zm-cell-main {
    height: 100%;
    margin-left: 4vw;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.zm-cell-main-border {
    border-top-width: 1px;
    border-top-style: solid;
    border-top-color: #e8e8e8;
}

.zm-cell-hd-icon {
    font-size: 16px;
    line-height: 1;
    width: 20px;
    text-align: center;
}

.zm-cell-bd-text {
    margin-left: 16px;
    color: #353535;
    font-size: 30rpx;
    flex: 1;
}

.zm-cell-ft {
    display: flex;
    align-items: center;
}

.zm-cell-ft-text {
    color: #888;
    padding-right: 12px;
    font-size: 12.75px;
}

.zm-cell-ft-icon {
    color: #c7c7cc;
    margin-right: 4vw;
    font-size: 16px;
}