.wrap {
    width: 100vw;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.colcenter {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.rowcenter {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.head {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.head .title {
    color: #353535;
    font-size: 48rpx;
    text-align: center;
    font-weight: 500;
}

.head .des1 {
    color: #aaaaaa;
    font-size: 25rpx;
    text-align: center;
    margin-bottom: 8rpx;
    margin-top: 18rpx;
}

.head .des2 {
    color: #aaaaaa;
    font-size: 25rpx;
    text-align: center;
}

.lists {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    padding-left: 37rpx;
    padding-right: 37rpx;
    padding-top: 41rpx;
    background-color: #fefefe;
}

.lists .book {
    width: 317rpx;
    height: 523rpx;
    background-color: pink;
    margin-bottom: 50rpx;
    background-color: #ffffff;
    border-radius: 7rpx;
    box-shadow: 0 0 20rpx #eff0f0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.lists .book .poster {
    width: 189rpx;
    height: 281rpx;
    border: solid 1rpx #e5e5e5;
    margin-bottom: 19rpx;
    margin-top: 36rpx;
}

.lists .book .title {
    font-size: 28rpx;
    color: #353535;
    text-align: center;
    margin-bottom: 11rpx;
    font-weight: 500;
}

.lists .book .desc {
    font-size: 20rpx;
    color: #aaaaaa;
    text-align: center;
    margin-bottom: 13rpx;
    text-decoration: line-through;
}

.lists .book .btn {
    width: 188rpx;
    height: 52rpx;
    border-radius: 5rpx;
    background-color: #fa8919;
    color: #fff;
    font-size: 28rpx;
}

.book:nth-of-type(odd) {
    margin-right: 42rpx;
}

.is-ios {
    opacity: 0;
}