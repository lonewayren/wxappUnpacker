page {
    background-color: #f0f0f0;
}

.wrap {
    position: absolute;
    box-sizing: border-box;
    width: 89.4vw;
    left: 5.3vw;
    height: 94vh;
    top: 1.2vh;
    border: 1px solid #d2d2d2;
    box-shadow: 0 0 15px -5px #888;
    box-shadow: 0 0 12px 0px rgba(112,112,112,0.2);
    border-radius: 1.4vw;
    background-color: #fff;
    font-size: 16px;
    padding: 7.5vw 7.4vw 2.29vh 7.4vw;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: #434343;
}

.title {
    flex-shrink: 0;
    font-size: 21.5px;
    max-height: 60px;
    overflow: hidden;
    color: #353535;
}

.line {
    flex-shrink: 0;
    box-sizing: border-box;
    height: 1px;
    border-bottom: 1px dashed #b2b2b2;
}

.line.is-top {
    margin: 4.087vh 0;
}

.line.is-bottom {
    margin: 9.56vh 0 2.29vh 0;
    flex-shrink: 0;
}

.content {
    flex-grow: 1;
    flex-shrink: 1;
    height: 45.6vh;
    font-size: 15px;
    position: relative;
    color: #5c5c5c;
}

.content .scroll {
    width: 100%;
    height: 100%;
}

.content .scroll .pre {
    border: 0;
}

.content-bottom-fill {
    height: 4vh;
}

.content-bottom-mask {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 4vh;
    background: -webkit-gradient(linear,0 top,0 bottom,from(rgba(255,255,255,0)),to(#fff));
}

.btn-jump {
    flex-shrink: 0;
    font-size: 13.5px;
    color: #fa8919;
    margin-top: 4vh;
}

.footer {
    flex-shrink: 0;
    font-size: 12px;
    flex-shrink: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #434343;
}

.footer image,.footer-share {
    width: 6vw;
    height: 6vw;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #8A8E97;
    border: 1px solid #8A8E97;
    border-radius: 50%;
}

.footer .icon {
    font-size: 14px;
    position: relative;
    top: 1px;
}