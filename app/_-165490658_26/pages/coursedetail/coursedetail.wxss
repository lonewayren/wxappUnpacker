.comment-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-bottom: 16px;
}

.comment-item .avatar {
    width: 42px;
    height: 42px;
    flex-shrink: 0;
    border-radius: 50%;
    vertical-align: bottom;
}

.comment-item .info {
    margin-left: 8px;
    flex-grow: 1;
}

.comment-item .info .hd {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    line-height: 1;
    color: #888;
}

.comment-item .info .hd .username {
    font-size: 30rpx;
    font-weight: 400;
    line-height: 1.2;
    flex-grow: 1;
}

.comment-item .info .hd .icon {
    display: inline-block;
    font-size: 30rpx;
    margin-right: 8px;
}

.comment-item .info .hd .icon-zhuanfa {
    margin-right: 40rpx;
    flex-shrink: 0;
}

.comment-item .info .hd .btn-praise {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    font-size: 30rpx;
}

.comment-item .info .hd .btn-praise.is-highlight {
    color: #fa8919;
}

.comment-item .info .bd {
    margin-top: 4px;
    color: #353535;
    font-size: 30rpx;
    font-weight: 400;
    white-space: normal;
    word-break: break-word;
    line-height: 1.6;
}

.comment-item .info .time {
    color: #888;
    font-size: 9px;
    margin: 8px 0;
}

.comment-item .info .reply .reply-hd {
    font-size: 30rpx;
}

.comment-item .info .reply .reply-hd .span {
    margin-left: -4px;
    color: #888;
    font-weight: 400;
}

.comment-item .info .reply .reply-hd .icon {
    color: #ff5a05;
    font-size: 30rpx;
}

.comment-item .info .reply .reply-content {
    margin-top: 4px;
    color: #353535;
    font-size: 30rpx;
    font-weight: 400;
    white-space: normal;
    word-break: break-word;
    line-height: 1.6;
}

.comment-item .info .reply .reply-time {
    color: #888;
    font-size: 9px;
    margin: 8px 0;
}

.video-player {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 56.13vw;
    z-index: 2;
}

.course-detail {
    background-color: #f5f5f5;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    width: 100%;
    top: 0;
    height: 100%;
    padding-top: 56.13vw;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
}

.course-info {
    background: #FFF;
}

.course-info-top {
    padding: 16px 12.5px 6.4px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.course-info-top .h1 {
    font-size: 16.5px;
    font-weight: 400;
    text-align: justify-content;
}

.course-info-top .iconfont {
    font-weight: 400;
    width: 40px;
    padding-right: 12.5px;
    flex-shrink: 0;
    text-align: right;
    color: #dadada;
}

.course-info-bottom {
    padding: 0 12.5px 8px;
    border-bottom: #e8e8e8 solid 1px;
    color: #888;
    font-size: 12.5px;
}

.course-info-bottom .iconfont {
    color: #d9d9d9;
    font-size: 12px;
}

.course-status-update {
    margin-left: 10px;
}

.video-list {
    background: #fff;
    width: 100%;
    box-sizing: border-box;
    padding: 14px 11.5px 14px 0;
    white-space: nowrap;
}

.video-list-item {
    margin-left: 11.5px;
    position: relative;
    border: #e8e8e8 solid 1px;
    border-radius: 3px;
    height: 65px;
    line-height: 65px;
    font-size: 0;
    vertical-align: middle;
    overflow: hidden;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    transition: border 0.5s ease;
    white-space: normal;
}

.video-list-item image {
    width: 28.5px;
    height: 13.5px;
    position: absolute;
    top: 0;
    left: 0;
}

.video-list-item .a {
    transition: color 0.5s ease;
    padding: 0 8px;
    font-size: 3.333vw;
    line-height: 1.28;
}

.video-list-item.on {
    border-color: #ff5a05;
}

.content-box {
    padding: 0 21px;
    background-color: #fff;
    margin-top: 7.5px;
}

.content-box .h1 {
    margin-top: 0px;
    font-weight: 400;
    font-size: 15.25px;
    border-bottom: 1px solid #eee;
    line-height: 2.8;
}

.content-box .p {
    font-size: 14px;
    color: #888;
    line-height: 1.6;
}

.content-box .li {
    font-size: 14px;
    line-height: 1.6;
    color: #888;
}

.extra {
    margin-top: 7.5px;
    background: #FFF;
    position: relative;
    padding: 0 21px 67px 21px;
}

.extra .h2 {
    text-align: center;
    color: #888;
    position: relative;
    z-index: 1;
    margin-bottom: 14px;
}

.extra .h2::before {
    border-top: #e8e8e8 dotted 1px;
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    z-index: -1;
}

.extra .h2 .span {
    font-size: 30rpx;
    font-weight: 400;
    padding: 16px 16px;
    background: #FFF;
    display: inline-block;
}

.extra .no-comment {
    text-align: center;
    margin-bottom: 15px;
}

.extra .no-comment .iconfont.icon-cat {
    color: #f5f5f5;
    font-size: 100px;
    line-height: 1.2;
    margin-right: 12px;
}

.extra .no-comment .no-comment-text {
    color: #e8e8e8;
    font-size: 12.5px;
    line-height: 1.6;
}