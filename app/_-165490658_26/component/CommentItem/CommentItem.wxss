.comment-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-bottom: 16px;
}

.comment-item .avatar {
    width: 42px;
    height: 42px;
    flex-shrink: 0;
    border-radius: 50%;
    vertical-align: bottom;
}

.comment-item .info {
    margin-left: 8px;
    flex-grow: 1;
}

.comment-item .info .hd {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    line-height: 1;
    color: #888;
}

.comment-item .info .hd .username {
    font-size: 30rpx;
    font-weight: 400;
    line-height: 1.2;
    flex-grow: 1;
}

.comment-item .info .hd .icon {
    display: inline-block;
    font-size: 30rpx;
    margin-right: 8px;
}

.comment-item .info .hd .icon-zhuanfa {
    margin-right: 40rpx;
    flex-shrink: 0;
}

.comment-item .info .hd .btn-praise {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    font-size: 30rpx;
}

.comment-item .info .hd .btn-praise.is-highlight {
    color: #fa8919;
}

.comment-item .info .bd {
    margin-top: 4px;
    color: #353535;
    font-size: 30rpx;
    font-weight: 400;
    white-space: normal;
    word-break: break-word;
    line-height: 1.6;
}

.comment-item .info .time {
    color: #888;
    font-size: 9px;
    margin: 8px 0;
}

.comment-item .info .reply .reply-hd {
    font-size: 30rpx;
}

.comment-item .info .reply .reply-hd .span {
    margin-left: -4px;
    color: #888;
    font-weight: 400;
}

.comment-item .info .reply .reply-hd .icon {
    color: #ff5a05;
    font-size: 30rpx;
}

.comment-item .info .reply .reply-content {
    margin-top: 4px;
    color: #353535;
    font-size: 30rpx;
    font-weight: 400;
    white-space: normal;
    word-break: break-word;
    line-height: 1.6;
}

.comment-item .info .reply .reply-time {
    color: #888;
    font-size: 9px;
    margin: 8px 0;
}