.root {
    position: fixed;
    top: 100vh;
    left: 0;
    width: 100vw;
    height: 100vh;
    transition: top 0.4s;
    z-index: 1000;
}

.root.is-hidden {
    top: 100vh;
}

.root.is-show {
    top: 0;
}

.actions {
    position: absolute;
    left: 0;
    width: 100%;
    bottom: 0;
    background: #f8f8f8;
}

.select {
    margin-bottom: 1vh;
}

.item {
    background-color: #fff;
    text-align: center;
    line-height: 8vh;
    font-size: 16px;
    border-top: 1px solid #f8f8f8;
    position: relative;
}

button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}